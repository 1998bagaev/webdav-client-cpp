if(CMAKE_SYSTEM_PROCESSOR STREQUAL "x86_64")
    set(CPACK_DEBIAN_PACKAGE_ARCHITECTURE amd64)
elseif(CMAKE_SYSTEM_PROCESSOR STREQUAL "arm")
    set(CPACK_DEBIAN_PACKAGE_ARCHITECTURE armhf)
endif()
set(CPACK_RPM_PACKAGE_ARCHITECTURE ${CMAKE_SYSTEM_PROCESSOR})

if(CPACK_GENERATOR MATCHES "DEB")
set(CPACK_DEBIAN_FILE_NAME "${CPACK_DEBIAN_PACKAGE_NAME}_${CPACK_PACKAGE_VERSION}_${CPACK_DEBIAN_PACKAGE_RELEASE}_${CPACK_DEBIAN_PACKAGE_ARCHITECTURE}")
set(CPACK_PACKAGE_FILE_NAME ${CPACK_DEBIAN_FILE_NAME})
elseif(CPACK_GENERATOR MATCHES "RPM")
set(CPACK_RPM_FILE_NAME "${CPACK_RPM_PACKAGE_NAME}_${CPACK_PACKAGE_VERSION}_${CPACK_RPM_PACKAGE_RELEASE}_${CPACK_RPM_PACKAGE_ARCHITECTURE}")
set(CPACK_PACKAGE_FILE_NAME ${CPACK_RPM_FILE_NAME})
endif()
